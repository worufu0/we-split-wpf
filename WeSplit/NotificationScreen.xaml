<Window x:Class="WeSplit.NotificationScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeSplit"
        mc:Ignorable="d"
        x:Name="notificationScreen"
        Icon="Assets/Icons/ApplicationIcon.ico"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ShowActivated="True"
        AllowsTransparency="True"
        Width="250"
        Height="150"
        Background="Transparent"
        Loaded="notificationScreen_Loaded">
    <Grid>
        <Border CornerRadius="10"
                Background="#FFFFFF"
                Opacity="0.8"/>
        <StackPanel VerticalAlignment="Center">
            <Image Source="Assets/Icons/SuccessIcon.png"
                   RenderOptions.BitmapScalingMode="HighQuality"
                   Width="48"
                   Height="48"/>
            <TextBlock x:Name="textBlock"
                   TextAlignment="Center"
                   TextWrapping="Wrap"
                   FontSize="20"
                   Foreground="#000000"/>
        </StackPanel>
        
    </Grid>
</Window>
