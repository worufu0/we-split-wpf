                                               FontWeight="Heavy"
                                               FontSize="{Binding ElementName=listUserControl, Path=ActualHeight, Converter={StaticResource windowHeightToNormalTextSizeConverter}}"
                                               Foreground="#FFFFFF"/>
                                    <TextBlock Text="{Binding membersView}"
                                               TextAlignment="Justify"
                                               TextWrapping="Wrap"
                                               FontFamily="Tahoma"
                                               Foreground="#BBBBBB"
                                               FontSize="{Binding ElementName=listUserControl, Path=ActualHeight, Converter={StaticResource windowHeightToNormalTextSizeConverter}}"/>
                                </StackPanel>
                                <Button x:Name="detailButton"
                                        Grid.Column="1"
                                        Style="{StaticResource detailButtonStyle}"
                                        Click="detailButton_Click"/>
                            </Grid>
                            <Border.Triggers>
                                <EventTrigger RoutedEvent="Border.MouseEnter">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="summaryBorder"
                                                            Storyboard.TargetProperty="Background.Color"
                                                            BeginTime="0:0:0"
                                                            Duration="0:0:0.1"
                                                            FillBehavior="HoldEnd"
                                                            To="#6C6C6C"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                                <EventTrigger RoutedEvent="Border.MouseLeave">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="summaryBorder"
                                                            Storyboard.TargetProperty="Background.Color"
                                                            BeginTime="0:0:0"
                                                            Duration="0:0:0.1"
                                                            FillBehavior="HoldEnd"
                                                            To="#222222"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </Border.Triggers>
                        </Border>
                        <Border Grid.Column="0"
                                Grid.Row="0"
                                Grid.ColumnSpan="2"
                                Grid.RowSpan="2"
                                CornerRadius="10">
                            <Border.Background>
                                <ImageBrush ImageSource="{Binding images[0], Converter={StaticResource relativeToAbsoluteConverter}}"
                                            RenderOptions.BitmapScalingMode="HighQuality"
                                            Stretch="UniformToFill"/>
                            </Border.Background>
                            <Border VerticalAlignment="Bottom"
                                    CornerRadius="0 0 10 10"
                                    Background="#111111"
