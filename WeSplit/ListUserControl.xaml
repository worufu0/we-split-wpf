                                Grid.ColumnSpan="2"
                                Grid.RowSpan="2"
                                CornerRadius="10"
                                Background="#222222">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="7*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="1"
