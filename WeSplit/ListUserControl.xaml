                                           HorizontalAlignment="Center"
                                           FontFamily="Tahoma"
                                           FontSize="{Binding ElementName=listUserControl, Path=ActualHeight, Converter={StaticResource windowHeightToNormalTextSizeConverter}}"
                                           Foreground="#FFFFFF"/>
                            </Border>
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</UserControl>
