                                    Value="Khôi phục"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsChecked"
                                           Value="True"/>
                                <Condition Property="IsMouseOver"
                                           Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="Assets/Icons/NormalWindowButton.png"/>
                            <Setter Property="ToolTip"
                                    Value="Khôi phục"/>
                        </MultiTrigger>
