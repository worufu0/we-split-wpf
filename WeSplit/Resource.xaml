    <!--Kiểu mục danh sách chuyến đi-->
    <Style x:Key="listListViewItemStyle"
           TargetType="{x:Type ListViewItem}">
        <Setter Property="ToolTip"
                Value="Danh sách chuyến đi"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type ListViewItem}">
                    <Border x:Name="border"
                            Margin="0 2 0 2">
                        <StackPanel Orientation="Horizontal"
                                    Margin="5">
                            <Image x:Name="image"
                                   Source="Assets/Icons/ListIcon.png"
                                   RenderOptions.BitmapScalingMode="HighQuality"
                                   Width="30"
                                   Height="30"/>
                            <TextBlock x:Name="text"
                                       Text="Danh sách chuyến đi"
                                       VerticalAlignment="Center"
                                       FontFamily="Tahoma"
                                       FontSize="14"
                                       Foreground="#FFFFFF"
                                       Padding="5"/>
                        </StackPanel>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="Background"
                                    Value="#666666"/>
                        </Trigger>
                        <Trigger Property="IsSelected"
                                 Value="True">
                            <Setter Property="Focusable"
                                    Value="False"/>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="Assets/Icons/SelectedListIcon.png"/>
                            <Setter TargetName="text"
                                    Property="Foreground"
                                    Value="#F4C51F"/>
                            <Setter TargetName="border"
                                    Property="Background"
                                    Value="#555555"/>
                            <Setter TargetName="border"
                                    Property="BorderThickness"
                                    Value="3 0 0 0"/>
                            <Setter TargetName="border"
                                    Property="BorderBrush"
                                    Value="#F4C51F"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
