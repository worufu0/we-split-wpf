                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="Effect"
                                    Value="{StaticResource whiteShadowEffect}"/>
                        </Trigger>
                        <Trigger Property="IsSelectionActive"
                                 Value="True">
                            <Setter TargetName="border"
                                    Property="BorderBrush"
