<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WeSplit">
<!--Bộ chuyển đổi-->
    <local:RelativeToAbsoluteConverter x:Key="relativeToAbsoluteConverter"/>
    <local:InverseBooleanConverter x:Key="inverseBooleanConverter"/>
    <local:SignToColorConverter x:Key="signToColorConverter"/>
    <local:SelectedToDisabledConverter x:Key="selectedToDisabledConverter"/>
    <local:IntegerToRadioValueConverter x:Key="integerToRadioValueConverter"/>
    <local:WindowHeightToTitleTextSizeConverter x:Key="windowHeightToTitleTextSizeConverter"/>
    <local:ItemCountToEmtyNoficationCoverter x:Key="itemCountToEmtyNoficationCoverter"/>
    <local:WindowHeightToHeaderTextSizeConverter x:Key="windowHeightToHeaderTextSizeConverter"/>
    <local:WindowHeightToNormalTextSizeConverter x:Key="windowHeightToNormalTextSizeConverter"/>
    <local:ListViewHeightToItemHeightConverter x:Key="listViewHeightToItemHeightConverter"/>
    <local:ItemHeightToItemWidthConverter x:Key="itemHeightToItemWidthConverter"/>
<!--Hiệu ứng-->
    <!--Hiệu ứng đổ bóng trắng-->
    <DropShadowEffect x:Key="whiteShadowEffect"
                      BlurRadius="0"
                      ShadowDepth="0"
                      Direction="0"
                      Color="#FFFFFF"/>
    <!--Hiệu ứng đổ bóng trắng mạnh-->
    <DropShadowEffect x:Key="whiteStrongShadowEffect"
                      BlurRadius="5"
                      ShadowDepth="0"
                      Direction="0"
                      Color="#FFFFFF"/>
    <!--Hiệu ứng đổ bóng đen-->
    <DropShadowEffect x:Key="blackShadowEffect"
                      BlurRadius="0"
                      ShadowDepth="0"
                      Direction="0"
                      Color="#000000"/>
    <!--Hiệu ứng đổ bóng xám-->
    <DropShadowEffect x:Key="grayShadowEffect"
                      BlurRadius="5"
                      ShadowDepth="5"
                      Direction="225"
                      Color="#333333"/>
<!--Splash screen-->
    <!--Kiểu checkbox vô hiệu hóa splash screen-->
    <Style x:Key="splashScreenCheckBoxStyle"
           TargetType="{x:Type CheckBox}">
        <Setter Property="ToolTip"
                Value="Bật vô hiệu hóa màn hình"/>
        <Setter Property="Focusable"
                Value="False"/>
        <Setter Property="Margin"
                Value="0 0 5 0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type CheckBox}">
                    <Image x:Name="image"
                           Source="Assets/Icons/SplashScreenUncheckedCheckBox.png"
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Stretch="Fill"
                           Width="20"
                           Height="20"/>
                    <ControlTemplate.Triggers>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="False"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="Assets/Icons/SplashScreenUncheckedCheckBox.png"/>
                            <Setter Property="Effect"
                                    Value="{StaticResource whiteShadowEffect}"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="False"/>
                                <Condition Property="IsChecked"
                                           Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="Assets/Icons/SplashScreenCheckedCheckBox.png"/>
                            <Setter Property="ToolTip"
                                    Value="Tắt vô hiệu hóa màn hình"/>
                        </MultiTrigger>
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                                <Condition Property="IsChecked"
                                           Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="Assets/Icons/SplashScreenCheckedCheckBox.png"/>
                            <Setter Property="ToolTip"
                                    Value="Tắt vô hiệu hóa màn hình"/>
                            <Setter Property="Effect"
                                    Value="{StaticResource whiteShadowEffect}"/>
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--Kiểu nút bỏ qua-->
    <Style x:Key="skipButtonStyle"
           TargetType="{x:Type Button}">
        <Setter Property="ToolTip"
                Value="Bỏ qua"/>
        <Setter Property="HorizontalAlignment"
                Value="Right"/>
        <Setter Property="VerticalAlignment"
                Value="Bottom"/>
        <Setter Property="Focusable"
                Value="False"/>
        <Setter Property="Background"
                Value="Transparent"/>
        <Setter Property="BorderThickness"
                Value="0"/>
        <Setter Property="Margin"
                Value="3"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <TextBlock Text="Bỏ qua >"
                               FontFamily="Tahoma"
                               FontWeight="Thin"
                               FontSize="12"
                               Foreground="#A0A0A0"/>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver"
                                 Value="True">
                            <Setter Property="Effect"
                                    Value="{StaticResource whiteShadowEffect}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
