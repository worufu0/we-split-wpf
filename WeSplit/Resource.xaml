                                           Value="True"/>
                                <Condition Property="IsMouseOver"
                                           Value="True"/>
                            </MultiTrigger.Conditions>
                            <Setter TargetName="image"
                                    Property="Source"
                                    Value="Assets/Icons/HoverNormalWindowButton.png"/>
                            <Setter TargetName="border"
                                    Property="Background"
                                    Value="#111111"/>
